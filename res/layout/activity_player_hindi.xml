<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        app:controller_layout_id="@layout/activity_player_custom" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/indian" />
    <Button
        android:id="@+id/radio1"
        android:background="#232323"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="रेडियो के माध्यम से सुनो "
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="95dp"
        android:layout_marginRight="40dp"
        android:onClick="change"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/second"
        android:background="#232323"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="ट्रेन विशिष्ट घोषणा"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="40dp"
        android:onClick="change1"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="#232323"
        android:onClick="again"
        android:text="लाइव घोषणा"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp" />


</FrameLayout>
